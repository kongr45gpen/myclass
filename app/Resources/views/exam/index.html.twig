{% extends "layout.html.twig" %}

{% block title %}{{ 'Exams' | trans }}{% endblock %}

{% block content %}
    <h1 class="ui header">{% trans %}Exams{% endtrans %}</h1>

    <table class="ui celled table segment">
        <thead>
            <tr>
                <th class="one wide">{% trans %}Pos.{% endtrans %}</th>
                <th>{% trans %}Day{% endtrans %}</th>
                <th>{% trans %}Time of day{% endtrans %}</th>
                <th class="ten wide">{% trans %}Lesson{% endtrans %}</th>
            </tr>
        </thead>
	<tbody>
	    {% for exam in exams %}
		<tr>
		    <td>{{ loop.index }}</td>
		    <td>{{ exam.date|localizeddate('full', 'full', null, null, 'cccc dd MMMM') }}</td>
		    <td>{{ exam.date|localizeddate('full', 'full', null, null, 'hh:mm') }}</td>
		    <td>{{ exam.lesson.name }}</td>
		</tr>
	    {% endfor %}
	</tbody>
    </table>
{% endblock %}
